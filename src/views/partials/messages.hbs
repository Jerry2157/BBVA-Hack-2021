{{#if success_msg }}
  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="success" style="z-index: 10000;">
    {{success_msg}}
  <button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close">
  </button>
</div>
{{/if}}

{{#if error_msg }}
  <div class="alert alert-dismissible fade show" role="alert" data-mdb-color="danger" style="z-index: 10000;">
    {{error_msg}}
  <button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close">
  </button>
</div>
{{/if}}
